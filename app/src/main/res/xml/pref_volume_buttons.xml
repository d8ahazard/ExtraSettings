<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceScreen
        android:title="@string/pref_header_volume_buttons"
        android:icon="@drawable/ic_music">
        <ListPreference
            android:key="@string/pref_key_volume_panel_timeout"
            android:title="@string/pref_title_volume_panel_timeout"
            android:defaultValue="3000"
            android:entries="@array/pref_volume_panel_timeout_titles"
            android:entryValues="@array/pref_volume_panel_timeout_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"/>
        <SwitchPreference
            android:key="@string/pref_key_volume_panel_sounds"
            android:title="@string/pref_title_volume_panel_sounds"
            android:defaultValue="true"/>
        <ListPreference
            android:key="@string/pref_key_volume_cursor"
            android:title="@string/pref_title_volume_cursor"
            android:defaultValue="0"
            android:entries="@array/pref_volume_cursor_titles"
            android:entryValues="@array/pref_volume_cursor_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"/>
        <PreferenceCategory
            android:title="@string/pref_header_music_controls">
            <SwitchPreference
                android:key="@string/pref_key_enable_music_controls"
                android:title="@string/pref_title_enable_music_controls"
                android:defaultValue="false"/>
            <ListPreference
                android:dependency="@string/pref_key_enable_music_controls"
                android:key="@string/pref_key_volume_up_action"
                android:title="@string/pref_title_music_controls_volume_up_action"
                android:defaultValue="87"
                android:entries="@array/pref_music_controls_button_titles"
                android:entryValues="@array/pref_music_controls_button_values"
                android:negativeButtonText="@null"
                android:positiveButtonText="@null"/>
            <ListPreference
                android:dependency="@string/pref_key_enable_music_controls"
                android:key="@string/pref_key_volume_down_action"
                android:title="@string/pref_title_music_controls_volume_down_action"
                android:defaultValue="88"
                android:entries="@array/pref_music_controls_button_titles"
                android:entryValues="@array/pref_music_controls_button_values"
                android:negativeButtonText="@null"
                android:positiveButtonText="@null"/>
            <ListPreference
                android:dependency="@string/pref_key_enable_music_controls"
                android:key="@string/pref_key_music_controls_timeout"
                android:title="@string/pref_title_music_controls_timeout"
                android:defaultValue="500"
                android:entries="@array/pref_music_controls_timeout_titles"
                android:entryValues="@array/pref_music_controls_timeout_values"
                android:negativeButtonText="@null"
                android:positiveButtonText="@null"/>
        </PreferenceCategory>
    </PreferenceScreen>
</PreferenceScreen>
