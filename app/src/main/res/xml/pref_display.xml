<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceScreen
        android:title="@string/pref_header_display"
        android:icon="@drawable/ic_display">
        <ListPreference
            android:key="@string/pref_key_density"
            android:title="@string/pref_title_density"
            android:defaultValue="480"
            android:entries="@array/pref_density_titles"
            android:entryValues="@array/pref_density_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"/>
        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="@string/pref_key_battery_save_mode_color"
            android:title="@string/battery_saver_title"
            android:summary="@string/battery_saver_summary"
            android:defaultValue="0xf4511e"
            alphaSlider="true"/>
        <PreferenceCategory
            android:title="@string/pref_category_title_recents">
            <SwitchPreference
                android:key="@string/pref_key_show_search_bar"
                android:title="@string/pref_title_show_search_bar"
                android:defaultValue="true"/>
            <SwitchPreference
                android:key="@string/pref_key_show_clear_all_recents"
                android:title="@string/pref_title_show_clear_recents"
                android:defaultValue="true"/>
            <ListPreference
                android:key="@string/pref_key_clear_all_recents_location"
                android:title="@string/pref_title_clear_recents_location"
                android:defaultValue="3"
                android:entries="@array/pref_clear_all_location_titles"
                android:entryValues="@array/pref_clear_all_location_values"
                android:negativeButtonText="@null"
                android:positiveButtonText="@null"/>
        </PreferenceCategory>
    </PreferenceScreen>
</PreferenceScreen>
